
<div class="container-lg form-cont" style="height: 80%">
  <div class="row justify-content-center" style="margin: auto"> 
    <form action="/users/register" method="POST" class="col-6  border py-4 px-4 col-10 col-md-6 col-lg-6">
    
    <div class="col-12">
    <input type="text" id="name" class="form-control" name="name" value="{{formData.name}}"/>
    <label class="form-label" for="name">Name</label>
    </div>
    <span>
      {{#each arrWarnings}}
    <div class="text-start" style="color: red; font-size:medium">{{msg.name1}}</div>
    <div class="text-start" style="color: red; font-size:medium">{{msg.name2}}</div>
     {{/each}}
    </span>
    

    <div class="col-12">
    <input type="text" id="lastName" class="form-control" name="lastName" value="{{formData.lastName}}"/>
    <label class="form-label" for="lastName">Lastname</label>
    </div>
    <span>
      {{#each arrWarnings}}
    <div class="text-start" style="color: red; font-size:medium">{{msg.lastName1}}</div>
    <div class="text-start" style="color: red; font-size:medium">{{msg.lastName2}}</div>
     {{/each}}
    </span>
  
    <div class="col-12">
    <input type="email" id="email" class="form-control" name="email" value="{{formData.email}}"/>
    <label class="form-label" for="email">Email</label>
    </div>
    <span>
      {{#each arrWarnings}}
    <div class="text-start" style="color: red; font-size:medium">{{msg.email1}}</div>
    <div class="text-start" style="color: red; font-size:medium">{{msg.email2}}</div>
     {{/each}}
    </span>

    <div class="col-12">
    <input type="password" id="pass" class="form-control" name="pass" value="{{formData.pass}}"/>
    <label class="form-label" for="pass">Password</label>
    </div>
   <span>
    {{#each arrWarnings}}
    <div class="text-start" style="color: red; font-size:medium">{{msg.pass1}}</div>
    {{/each}}
   </span>
  
       {{#if message}}
      <div class="alert alert-danger d-flex align-items-center" role="alert">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor"
          class="gbi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img"
          aria-label="Warning:">
          <path
            d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
        </svg>
        <div>
          {{message}}
        </div>
      </div>
      {{/if}}
   <!-- Submit button -->
   <div class="d-flex justify-content-center"> 
    <button type="submit" class="btn btn-primary btn-block mb-4">Sign up</button>
   </div>

   <div class="d-flex justify-content-center">
    <a href="/users/login"><p>Already have an account?</p></a>
   </div>
  
  </form>
  </div>
</div>

